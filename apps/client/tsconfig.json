{
  "extends": "@repo/typescript-config/remix.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    },

    "jsxImportSource": "@emotion/react"
  }
}
